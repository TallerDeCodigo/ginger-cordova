<section>

	{{#each data.pool}}
		<a href="detail.html?id={{ID}}" class="small link">
			<img src="{{thumb_url}}">
			<div>
				{{#if designer_brand.profile_pic}}
					<img src="{{designer_brand.profile_pic}}" class="profile_pic round" />
				{{else}}
					<i class="material-icons account_circle invert" ></i>
				{{/if}}
				<h1>{{product_title}}</h1>
				<span>{{designer_brand.name}}</span>
				<h2>$ {{price}}</h2>
			</div>
		</a>
	{{/each}}

	{{#if_eq 0 data.count}}
		<p class="message big">There are no products in this category</p>
	{{/if_eq}}

</section>